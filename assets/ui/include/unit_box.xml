<?xml version="1.0" encoding="utf-8" ?>
<VBox>
	<VBox skin:Paint-color="0x000000" padding="5">
		<Text text="item.name" />
		<Box>
			<Bmp w="70" h="70" keepAspect="true" stretch="true" src="item.src" />
		</Box>
		<Text text="'statiqtiques'" />
		<HBox>
				<VBox>
					<Bmp w="30" tip:Tip-text="'attaque'" src="'ui/images/icons/stats/Icon_Sword.png'" h="30" stretch="true" keepAspect="true" />
					<Text text="'20'" />
				</VBox>
				<VBox>
					<Bmp w="30" tip:Tip-text="'defense : 20'" src="'ui/images/icons/stats/Icon_Shield.png'" h="30" stretch="true" keepAspect="true" />
					<Text text="'20'" />
				</VBox>
				<VBox>
					<Bmp w="30" tip:Tip-text="'protection perçage : 20'" src="'ui/images/icons/stats/Icon_Arrows.png'" h="30" stretch="true" keepAspect="true" />
					<Text text="'20'" />
				</VBox>
				<VBox>
					<Bmp w="30" tip:Tip-text="'vitesse : 2'" src="'ui/images/icons/stats/Icon_BlindingLight.png'" h="30" stretch="true" keepAspect="true" />
					<Text text="'20'" />
				</VBox>
		</HBox>
		<Text text="'coût'" />
		<HBox>
			<meta:repeat counter="cnt" times="Main.instance.simulateur.gameData.types.length">
				<VBox>
					<Bmp w="30" tip:Tip-text="'coût'" src="'ui/images/icons/'+Main.instance.simulateur.gameData.types[cnt].icon+'.png'" h="30" stretch="true" keepAspect="true" />
					<Text paddingTop="-15" text="'10'" />
				</VBox>
			</meta:repeat>
		</HBox>
	</VBox>
	<Box h="10"></Box>
	<Button h="20" w="100" text="'entraîner'" />
</VBox>