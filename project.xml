<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="LAK" package="com.lakhaxe" version="1.0.0" company="Youssouf & Moussa Sissoko" />
	
	<!-- output -->
	<app main="Main" file="lakhaxe" path="bin" />
	
	<window background="#000000" fps="60" />
	<window width="1024" height="768" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="stablexui" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="spritesheet" />
	<haxelib name="extension-networking" />
	<haxelib name="orm" />

	<!-- assets -->
	<icon path="assets/icon.png" />
	<assets path="assets/mali" rename="mali" />
	<assets path="assets/data" rename="data" />
	<assets path="assets/data/maps/world1" rename="world1" />
	<assets path="assets/world" rename="world" />
	<assets path="assets/ui" rename="ui" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>